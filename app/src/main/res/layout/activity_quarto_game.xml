                </TableRow>

                <TableRow
                    android:id="@+id/newRow3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/pion9"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_blanc_creux_carre" />

                    <ImageButton
                        android:id="@+id/pion10"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_blanc_creux_rond" />

                    <ImageButton
                        android:id="@+id/pion11"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_blanc_plein_carre" />

                    <ImageButton
                        android:id="@+id/pion12"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_blanc_plein_rond" />
                </TableRow>

                <TableRow
                    android:id="@+id/newRow4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/pion13"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_marron_creux_carre" />

                    <ImageButton
                        android:id="@+id/pion14"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_marron_creux_rond" />

                    <ImageButton
                        android:id="@+id/pion15"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_marron_plein_carre" />

                    <ImageButton
                        android:id="@+id/pion16"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/simple_marron_plein_rond" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
